
<% layout('layouts/boilerplate') -%><!DOCTYPE html>

<div class="container mt-5">
    <h1 class="mb-4">Your Bookings</h1>

    <% if (bookings.length === 0) { %>
      <p class="text-muted">You have no bookings yet.</p>
    <% } %>

    <div class="row">
      <% bookings.forEach(booking => { %>
        <% if (booking.listing) { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= booking.listing.title %></h5>
                <p class="card-text">
                  <strong>Check-In:</strong> <%= booking.checkIn.toDateString() %><br>
                  <strong>Check-Out:</strong> <%= booking.checkOut.toDateString() %><br>
                  <strong>Total Price:</strong> â‚¹<%= booking.totalPrice %>
                </p>
                <div class="d-flex justify-content-between">
                  <a href="/bookings/<%= booking._id %>/edit" class="btn btn-info btn-sm">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Cancel this booking?')">
                      <i class="fas fa-trash-alt"></i> Cancel
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>
  </div>